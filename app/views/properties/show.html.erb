<p id="notice"><%= notice %></p>
<p><b>物件名: </b><%= @property.property_name %></p>
<p><b>賃料: </b><%= @property.rent %>円</p>
<p><b>住所: </b><%= @property.address %></p>
<p><b>築年数 </b><%= @property.age %>年</p>
<p><b>備考 </b><%= @property.remark %></p>
<hr>
<% @property.nearest_stations.each_with_index do |f, index| %>
  <h3>最寄り駅 <%= index + 1 %></h3>
    <p><b>路線名 </b><%= f.route_name %></p>
    <p><b>駅名 </b><%= f.station_name %></p>
    <p><b>徒歩分数 </b><%= f.minutes_on_foot %>分</p>
<% end %>
<%= link_to '編集', edit_property_path(@property) %>|
